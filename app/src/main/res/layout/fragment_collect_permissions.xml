<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundDark"
    tools:context="ca.ualberta_ecocar.ecocar.CollectPermissionsFragment">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-thin"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="@string/explain_perms_request"
        android:id="@+id/explain_perms_text"
        />

    <Button
        android:text="@string/ask_for_perms_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:background="@drawable/rounded_corner_button_background"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/AskForPerms"
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/explain_perms_text"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
